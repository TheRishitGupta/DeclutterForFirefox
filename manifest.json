{
  "manifest_version": 3,
  "name": "Declutter",
  "description": "Closes unnecessary browser tabs via a button or keyboard shortcut. Includes default rules and allows users to customize which tabs should be closed.",
  "version": "1.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "declutter-tabs@example.com",
      "strict_min_version": "115.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Declutter Tabs"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],

  "commands": {
    "declutter-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Close unnecessary tabs"
    }
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  }
}
